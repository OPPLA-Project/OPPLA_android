<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        tools:context=".view.main.home.map.MapFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/map_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <net.daum.mf.map.api.MapView
                android:id="@+id/map_mapview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map_toolbar" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/map_imageview_centerpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_marker_myplace"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map_toolbar" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/background_button_questiondetail"
                android:orientation="vertical"
                android:paddingHorizontal="5dp"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map_toolbar">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/map_textview_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/icon_favorite"
                    android:drawablePadding="6dp"
                    android:gravity="bottom|center_horizontal"
                    android:padding="2dp"
                    android:text="찜한 공간"
                    android:textColor="#313336"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="#313336" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/map_textview_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/icon_refresh"

                    android:drawablePadding="6dp"
                    android:gravity="bottom|center_horizontal"
                    android:padding="2dp"
                    android:text="위치 갱신"
                    android:textColor="#313336"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/map_bottomsheetlayout_doquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:behavior_draggable="false"
            app:behavior_hideable="false"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/map_textview_doquestion"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginBottom="37dp"
                android:background="@drawable/background_button_doanswer"
                android:gravity="center"
                android:text="질문하기"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_bottomsheetlayout_doanswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bottomsheet_map"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            app:behavior_draggable="false"
            app:behavior_hideable="false"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="질문 마감까지"
                    android:textColor="#44474D"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/map_textview_doanswer_remaintime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/background_text_remaintime"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="2dp"
                    android:text="000 분"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/map_textview_doanswer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목제목제목제목제목"
                android:textColor="#313336"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/map_textview_doanswer_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" · 장소장소장소"
                android:textColor="#80858D"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/map_textview_doanswer_detail"
                android:layout_width="match_parent"
                android:layout_height="54.86dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/background_button_questiondetail"
                android:gravity="center"
                android:text="질문상세보기"
                android:textColor="#4E8FFF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_bottomsheetlayout_myquestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bottomsheet_map"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="14dp"
            app:behavior_draggable="false"
            app:behavior_hideable="false"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="질문 마감까지"
                    android:textColor="#44474D"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/map_textview_myquestion_remaintime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/background_text_remaintime"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="2dp"
                    android:text="000 분"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/map_textview_myquestion_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목제목제목제목제목"
                android:textColor="#313336"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/map_textview_myquestion_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" · 장소장소장소"
                android:textColor="#80858D"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/map_textview_myquestion_detail"
                    android:layout_width="match_parent"
                    android:layout_height="54.86dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_questiondetail"
                    android:gravity="center"
                    android:text="질문상세보기"
                    android:textColor="#4E8FFF"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/map_textview_myquestion_answercount"
                    android:layout_width="match_parent"
                    android:layout_height="54.86dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_questiondetail"
                    android:gravity="center"
                    android:text="질문상세보기"
                    android:textColor="#4E8FFF"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
