<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.main.question.DoanswerFragment">

        <include
            android:id="@+id/doanswer_toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/doanswer_toolbar">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="질문 마감까지"
                    android:textColor="#44474D"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doanswer_textview_remaintime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/background_text_remaintime"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="2dp"
                    android:text="000 분"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" 남았어요!"
                    android:textColor="#44474D"
                    android:textSize="12sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/doanswer_edittext_writeanswer"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginHorizontal="17dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/background_text_writeanswer"
                android:gravity="start"
                android:hint="질문에 대한 답을 작성하세요"
                android:paddingHorizontal="8dp"
                android:paddingVertical="13dp"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/doanswer_textview_countword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginHorizontal="17dp"
                android:layout_marginBottom="8dp"
                android:text="0/200자"
                android:textColor="#80858D"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doanswer_textview_takepicture"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="17dp"
                    android:background="@drawable/background_button_camerapicture"
                    android:drawableTop="@drawable/icon_camera_picture"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="0/5"
                    android:textSize="12sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/doanswer_recycler_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="17dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doanswer_textview_cancelanswer"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_cancelanswer"
                    android:gravity="center"
                    android:text="작성 취소하기"
                    android:textColor="#4E8FFF"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doanswer_textview_sendanswer"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_sendanswer"
                    android:gravity="center"
                    android:text="답변 보내기"
                    android:textColor="#80858D"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>