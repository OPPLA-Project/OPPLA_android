<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.main.mypage.history.HistoryFragment">

        <include
            android:id="@+id/histroy_toolbar"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/history_textview_date"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/background_text_notification"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="날짜"
            app:layout_constraintEnd_toStartOf="@+id/history_textview_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/histroy_toolbar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/history_textview_search"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_button_questiondetail"
            android:gravity="center"
            android:paddingHorizontal="27dp"
            android:text="조회"
            app:layout_constraintBottom_toBottomOf="@id/history_textview_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/history_textview_date" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recyclerview_historylist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/history_textview_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>