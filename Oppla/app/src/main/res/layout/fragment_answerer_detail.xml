<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.main.answer.answererdetail.AnswererDetailFragment">

        <include
            android:id="@+id/answererdetail_toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/answererdetail_imageview_profileimage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/icon_temp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/answererdetail_textview_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="52dp"
                        android:text="닉네임"
                        android:textColor="#313336"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/answererdetail_imageview_profileimage"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toEndOf="@id/answererdetail_imageview_profileimage"
                        app:layout_constraintTop_toBottomOf="@id/answererdetail_textview_nickname">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="24dp"
                            android:text="후기"
                            android:textColor="#80858D" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/answererdetail_textview_reviewscore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="4.5"
                            android:textColor="#4E8FFF" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="24dp"
                            android:layout_marginStart="25dp"
                            android:text="답변 수"
                            android:textColor="#80858D" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/answererdetail_textview_answercount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="4.5"
                            android:textColor="#4E8FFF" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="채택률"
                            android:textColor="#80858D" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/answererdetail_textview_adoptionrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="83%"
                            android:textColor="#4E8FFF" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:id="@+id/answererdetail_view_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#EEF1F5" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="24dp"
                    android:text="나의 한줄 소개글"
                    android:textColor="#313336"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/answererdetail_textview_aboutme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="8dp"
                    android:text="내 소개 핝루"
                    android:textColor="#44474D"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/answererdetail_view_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:background="#EEF1F5" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical"
                    android:text="후기 평가"
                    android:textColor="#313336" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="정보 평가"
                    android:textColor="#44474D" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_text_notification"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자세한 설명을 해줘요"
                        android:textColor="#313336"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/answererdetail_textview_reviewInfo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="3"
                        android:textColor="#4E8FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_text_notification"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자세한 설명을 해줘요"
                        android:textColor="#313336"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/answererdetail_textview_reviewInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="3"
                        android:textColor="#4E8FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_text_notification"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자세한 설명을 해줘요"
                        android:textColor="#313336"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/answererdetail_textview_reviewInfo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="3"
                        android:textColor="#4E8FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_text_notification"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자세한 설명을 해줘요"
                        android:textColor="#313336"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/answererdetail_textview_reviewInfo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="3"
                        android:textColor="#4E8FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="24dp"
                    android:text="답변속도 평가"
                    android:textColor="#44474D" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:background="@drawable/background_text_review"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="느려요"
                            android:textColor="#FF7347" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/answererdetail_textview_reivewSpeed1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="1"
                            android:textColor="#FF7347"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/background_text_notification"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="느려요" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/answererdetail_textview_reivewSpeed2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="1"
                            android:textColor="#4E8FFF"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/background_text_review2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="빨라요"
                            android:textColor="#FFFFFF" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/answererdetail_textview_reivewSpeed3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="1"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/answererdetail_view_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    android:background="#EEF1F5" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/answererdetail_textview_adopt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="56dp"
                    android:background="@drawable/background_button_doanswer"
                    android:gravity="center"
                    android:text="채택하기" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</layout>