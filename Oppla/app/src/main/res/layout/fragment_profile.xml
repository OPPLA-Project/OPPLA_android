<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.main.mypage.profile.ProfileFragment">

        <include
            android:id="@+id/profile_toolbar"
            layout="@layout/toolbar"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/profile_textview_fix"
                    android:layout_width="56dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="수정"
                    android:textColor="#80858D" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_imageview_profileimage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/icon_temp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_imageview_profileimage2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/background_camerapicture"
                        android:clickable="true"
                        android:src="@drawable/icon_camera_picture2"
                        app:civ_border_color="#313336"
                        app:civ_border_overlay="true"
                        app:civ_border_width="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/profile_textview_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="17dp"
                    android:text="닉네임"
                    android:textColor="#313336"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/background_text_mypoint"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="4.5dp"
                        android:text="보유 포인트"
                        android:textColor="#313336" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/profile_textview_mypoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4.5dp"
                        android:text="10000p"
                        android:textColor="#1F6EF5"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="24dp"
                        android:text="나의 후기점수"
                        android:textColor="#80858D" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/profile_textview_reviewscore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="4.5"
                        android:textColor="#4E8FFF" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="채택률"
                        android:textColor="#80858D" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/profile_textview_adoptionrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="83%"
                        android:textColor="#4E8FFF" />

                </LinearLayout>

                <View
                    android:id="@+id/profile_view_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#EEF1F5" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="24dp"
                    android:text="나의 한줄 소개글"
                    android:textColor="#313336"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/profile_textview_aboutme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="8dp"
                    android:text="내 소개 핝루"
                    android:textColor="#44474D"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/profile_view_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:background="#EEF1F5" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical"
                    android:text="후기 평가"
                    android:textColor="#313336" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="정보 평가"
                    android:textColor="#44474D" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_text_notification"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자세한 설명을 해줘요"
                        android:textColor="#313336"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/profile_textview_reviewInfo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="3"
                        android:textColor="#4E8FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_text_notification"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자세한 설명을 해줘요"
                        android:textColor="#313336"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/profile_textview_reviewInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="3"
                        android:textColor="#4E8FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_text_notification"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자세한 설명을 해줘요"
                        android:textColor="#313336"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/profile_textview_reviewInfo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="3"
                        android:textColor="#4E8FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_text_notification"
                    android:gravity="center"
                    android:paddingHorizontal="8dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자세한 설명을 해줘요"
                        android:textColor="#313336"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/profile_textview_reviewInfo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="3"
                        android:textColor="#4E8FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="24dp"
                    android:text="답변속도 평가"
                    android:textColor="#44474D" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:background="@drawable/background_text_review"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="느려요"
                            android:textColor="#FF7347" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/profile_textview_reivewSpeed1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="1"
                            android:textColor="#FF7347"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/background_text_notification"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="느려요" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/profile_textview_reivewSpeed2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="1"
                            android:textColor="#4E8FFF"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/background_text_review2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="빨라요"
                            android:textColor="#FFFFFF" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/profile_textview_reivewSpeed3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="1"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>