<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.main.question.checkanswer.CheckanswerFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/checkanswer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkanswer_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="질문 마감까지"
                    android:textColor="#44474D"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/checkanswer_textview_remaintime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/background_text_remaintime"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="2dp"
                    android:text="000 분"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" 남았어요!"
                    android:textColor="#44474D"
                    android:textSize="12sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/checkanswer_textview_writtenanswer"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginHorizontal="17dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/background_text_writeanswer"
                android:gravity="start"
                android:paddingHorizontal="8dp"
                android:paddingVertical="13dp"
                android:text="질문에 대한 답을 작성하세요"
                android:textColor="#44474D"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/checkanswer_textview_countpicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="17dp"
                android:layout_marginBottom="8dp"
                android:text="첨부한 사진"
                android:textColor="#80858D"
                android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/checkanswer_recycler_picture"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="17dp"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/checkanswer_textview_cancel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="17dp"
                android:background="@drawable/background_button_cancelanswer"
                android:gravity="center"
                android:text="답변 전송 취소"
                android:textColor="#4E8FFF"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
