<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/answererdetail_imageview_profileimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/icon_temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_answererlist_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="후기"
        android:textColor="#313336"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/answererdetail_imageview_profileimage"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/answererdetail_textview_reviewscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="4.5"
        android:textColor="#313336"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/item_answererlist_textview1"
        app:layout_constraintStart_toEndOf="@id/item_answererlist_textview1"
        app:layout_constraintTop_toTopOf="@id/item_answererlist_textview1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/answererdetail_imageview_profileimage"
        app:layout_constraintStart_toEndOf="@id/answererdetail_imageview_profileimage">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답변 수"
            android:textColor="#80858D" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/answererdetail_textview_answercount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="4.5"
            android:textColor="#4E8FFF" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="채택률"
            android:textColor="#80858D" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/answererdetail_textview_adoptionrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="83%"
            android:textColor="#4E8FFF" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_answererlist_textview_checkanswer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_button_checkanswer"
        android:gravity="center"
        android:text="답변보기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answererdetail_imageview_profileimage" />

    <View
        android:id="@+id/answererdetail_view_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="32dp"
        android:background="#EEF1F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_answererlist_textview_checkanswer" />
</androidx.constraintlayout.widget.ConstraintLayout>