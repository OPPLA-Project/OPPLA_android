<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_notification_layout">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_notification_textview_notification"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="19.14dp"
        android:background="@drawable/background_text_notification"
        android:gravity="center"
        android:text="근방 500m 이내 공간에 대한\n질문목록만 볼 수 있습니다."
        android:textColor="#80858D"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="24dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="앱을 종료해도 질문을 계속 받으시겠습니까?"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_notification_textview_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="설정하기"
            android:textColor="#4E8FFF"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>